+// SPDX-License-Identifier: GPL-2.0-only
+
+/dts-v1/;
+
+#include "msm8916-ufi.dtsi"
+
+/ {
+	model = "Generic SP970 4G LTE WiFi Modem";
+	compatible = "generic,sp970", "qcom,msm8916";
+};
+
+/* Reset button (active low) */
+&button_restart {
+	gpios = <&tlmm 107 GPIO_ACTIVE_LOW>;
+};
+
+/* RGB LEDs */
+&led_r {
+	gpios = <&tlmm 9 GPIO_ACTIVE_HIGH>;
+};
+
+&led_g {
+	gpios = <&tlmm 10 GPIO_ACTIVE_HIGH>;
+};
+
+&led_b {
+	gpios = <&tlmm 28 GPIO_ACTIVE_HIGH>;
+};
+
+/* Pinctrl for button and LEDs */
+&button_default {
+	pins = "gpio107";
+	bias-pull-up;
+};
+
+&gpio_leds_default {
+	pins = "gpio9", "gpio10", "gpio28";
+};
+
+/* Sleep clock aligned to the typical 32.768 kHz crystal */
+&sleep_clk {
+	clock-frequency = <32768>;
+};
+
+/* WCN3660B WiFi/BT - Add critical XO clock */
+&wcnss_iris {
+	compatible = "qcom,wcn3660b";
+	clocks = <&rpmcc RPM_SMD_RF_CLK2>;
+	clock-names = "xo";
+};
