+// SPDX-License-Identifier: GPL-2.0-only
+
+/dts-v1/;
+
+#include "msm8916-ufi.dtsi"
+
+/ {
+	model = "Generic SP970 4G LTE WiFi Modem";
+	compatible = "generic,sp970", "qcom,msm8916";
+};
+
+/* Reset button (active low) */
+&button_restart {
+	gpios = <&tlmm 107 GPIO_ACTIVE_LOW>;
+};
+
+/* RGB LEDs */
+&led_b { gpios = <&tlmm 28 GPIO_ACTIVE_HIGH>; };
+&led_g { gpios = <&tlmm 10 GPIO_ACTIVE_HIGH>; };
+&led_r { gpios = <&tlmm  9 GPIO_ACTIVE_HIGH>; };
+
+/* Pinctrl for button and LEDs */
+&button_default {
+	pins = "gpio107";
+	bias-pull-up;
+};
+
+&gpio_leds_default {
+	pins = "gpio28", "gpio10", "gpio9";
+};
+
+/* Sleep clock aligned to the typical 32.768 kHz crystal */
+&sleep_clk {
+	clock-frequency = <32768>;
+};
+
+/* WCNSS (pronto): RF chip and rails */
+&wcnss {
+	status = "okay";
+	iris {
+		compatible = "qcom,wcn3660b";
+		/* PM8916 rails (labels provided by msm8916-ufi.dtsi) */
+		vddxo-supply  = <&pm8916_l7>;
+		vddrfa-supply = <&pm8916_s3>;
+		vddpa-supply  = <&pm8916_l9>;
+		vdddig-supply = <&pm8916_l5>;
+	};
+};
+
