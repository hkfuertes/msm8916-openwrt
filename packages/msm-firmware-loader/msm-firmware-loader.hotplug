#!/bin/sh
# /etc/hotplug.d/firmware/05-msm-loader

[ "$ACTION" = "add" ] || exit 0

case "$FIRMWARE" in
  wcnss.mdt|modem.mdt|mba.mbn|venus.mdt) : ;;
  *) exit 0 ;;
esac

READY="/lib/firmware/.ready"

if [ ! -e "$READY" ]; then
  /usr/sbin/msm-firmware-loader 2>&1 || true
  touch "$READY"
fi

exit 0
