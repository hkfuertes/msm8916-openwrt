#!/bin/sh

show_logo() {
	# Esperar framebuffer (mÃ¡ximo 5 segundos)
	local i=0
	while [ ! -c /dev/fb0 ] && [ $i -lt 50 ]; do
		sleep 0.1
		i=$((i + 1))
	done
	
	# Mostrar logo si existe
	if [ -c /dev/fb0 ] && [ -f /etc/boot_logo.fb ]; then
		cat /etc/boot_logo.fb > /dev/fb0 2>/dev/null
	fi
}

boot_hook_add preinit_main show_logo