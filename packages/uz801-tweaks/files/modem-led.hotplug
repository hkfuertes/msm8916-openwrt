#!/bin/sh
# /etc/hotplug.d/iface/99-modem-led

case "$ACTION:$INTERFACE" in
    ifup:modem)
        echo 1 > /sys/class/leds/green:wlan/brightness
        logger -t smart-leds "Modem UP - Green LED ON"
        ;;
    ifdown:modem)
        echo 0 > /sys/class/leds/green:wlan/brightness
        logger -t smart-leds "Modem DOWN - Green LED OFF"
        ;;
esac
