#!/bin/sh
# /etc/hotplug.d/iface/99-modem-led
# Modem LED control based on interface status

case "$ACTION:$INTERFACE" in
    ifup:modem)
        ledcontrol red:wan off 2>/dev/null || true
        ledcontrol green:wan on 2>/dev/null || true
        logger -t modem-led "Modem UP - Green LED ON"
        ;;
    ifdown:modem)
        ledcontrol red:wan on 2>/dev/null || true
        ledcontrol green:wan off 2>/dev/null || true
        logger -t modem-led "Modem DOWN - Green LED OFF"
        ;;
esac
